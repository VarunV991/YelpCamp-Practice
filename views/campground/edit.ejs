<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center"> Edit Campground</h1>
        <div style="width:30%; margin:30px auto;">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[name]" value="<%=camp.name%>"">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[image]" value="<%=camp.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="edit[price]" value="<%=camp.price%>" min="100" step="10">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edit[description]" value="<%=camp.description %>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Submit!!">
                </div>
            </form>
            <a class="btn btn-lg" href="/campgrounds/<%=camp._id%>">Go Back </a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>